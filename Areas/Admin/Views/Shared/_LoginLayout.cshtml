<body data-spy="scroll" data-target=".subnav" data-offset="50">

    <div class="meta">
        @{  
            if (Request.Cookies.Get("UserName") != null)
            {
                var httpCookie = Request.Cookies.Get("UserName");
                if (httpCookie != null)
                {
                    var userName = httpCookie.Value;
                    string displayName = null;
                    foreach (var c in userName)
                    {
                        if (c != '.')
                        {
                            displayName = displayName + c;
                        }
                        else { break; }
                    }
            <a style="font-size: 12px;color: white;padding-left: 500px;text-decoration: none" href="@Url.Action("Logout", new { Area = "", Controller = "Home" })"><i class="icon-user icon-white"></i><b>&nbsp;Hi, @displayName</b> &nbsp;&nbsp;&nbsp; Logout &nbsp;<i class="icon-off icon-white"></i></a>
                }
            }
            else
            {
            <a style="font-size: 12px;color: white;padding-left: 10px;text-decoration: none;float: right;" href="@Url.Action("Login", new { Area = "", Controller = "Home" })"><i class="icon-user icon-white"></i>&nbsp;Login</a>
            <a style="text-decoration: none">&nbsp;&nbsp;&nbsp;&nbsp;</a>
            <a style="font-size: 12px;color: white;text-decoration: none;float: right;" href="@Url.Action("RegisterUser", new { Area = "", Controller = "Home" })">Register User</a>
            }
        }
    </div>
