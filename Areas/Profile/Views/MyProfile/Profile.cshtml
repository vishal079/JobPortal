                    </div>
                    <div class="modal-body" id="AjaxAddExperience">
                        <div class="span5">
                            
                            @Html.HiddenFor(m => m.Candidate.Experience.MainUser.Mid)     
                            
                            <div class="form-inline">
                                <label class="radio" >
