            @using (Html.BeginForm("AddExperience", "MyProfile", FormMethod.Post, new { id = "myForm" }))
            {
                 <div id="AddExperience" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="AddExperienceLabel" aria-hidden="true">
